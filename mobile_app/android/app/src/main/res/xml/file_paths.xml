<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External storage directories -->
    <external-path name="external_files" path="."/>

    <!-- External storage downloads directory -->
    <external-path name="downloads" path="Download/"/>

    <!-- External storage documents directory -->
    <external-path name="documents" path="Documents/"/>

    <!-- External storage pictures directory -->
    <external-path name="pictures" path="Pictures/"/>

    <!-- External storage DCIM directory -->
    <external-path name="dcim" path="DCIM/"/>

    <!-- Internal app-specific storage -->
    <files-path name="internal_files" path="."/>

    <!-- Internal app-specific cache storage -->
    <cache-path name="internal_cache" path="."/>

    <!-- External cache storage -->
    <external-cache-path name="external_cache" path="."/>

    <!-- Media files for assignments and uploads -->
    <external-path name="media" path="Android/media/"/>
</paths>
